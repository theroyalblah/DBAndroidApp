<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="413dp"
            android:layout_height="136dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/dateMeeting"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                android:text="2020-04-20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/timeViewText"
                app:layout_constraintHorizontal_bias="0.214"
                app:layout_constraintStart_toEndOf="@+id/gradeLevelText"
                app:layout_constraintTop_toBottomOf="@+id/meetingName"
                app:layout_constraintVertical_bias="0.122" />

            <TextView
                android:id="@+id/meetingName"
                android:layout_width="222dp"
                android:layout_height="43dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="5dp"
                android:text="Russian"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/enrollButton"
                android:layout_width="101dp"
                android:layout_height="43dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Enroll"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.095" />

            <TextView
                android:id="@+id/capacityText"
                android:layout_width="47dp"
                android:layout_height="34dp"
                android:text="4/20"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/enrollButton"
                app:layout_constraintStart_toEndOf="@+id/meetingName"
                tools:layout_editor_absoluteY="9dp" />

            <TextView
                android:id="@+id/timeViewText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:text="9:00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/viewMeetingButton"
                app:layout_constraintTop_toBottomOf="@+id/meetingName"
                app:layout_constraintVertical_bias="0.056" />

            <Button
                android:id="@+id/viewMeetingButton"
                android:layout_width="102dp"
                android:layout_height="42dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="View"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enrollButton" />

            <Button
                android:id="@+id/leaveAllMeatings"
                android:layout_width="102dp"
                android:layout_height="42dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Leave All"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewMeetingButton"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/gradeLevelText"
                android:layout_width="95dp"
                android:layout_height="21dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="12dp"
                android:text="Grade Level: 8"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/meetingName"
                app:layout_constraintVertical_bias="0.125" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>